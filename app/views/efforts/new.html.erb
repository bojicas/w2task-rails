<h1>New effort</h1>

<% form_for(@effort) do |f| %>
  <%= f.error_messages %>

	<%= f.hidden_field(:user_id, :value => session[:user_id]) %>
	<%= f.hidden_field :business_id, :value => @business.id %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 40, :rows => 4 %>
  </p>
  <p>
    <%= f.label :start %><br />
    <%= f.datetime_select :start %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', efforts_path %>
