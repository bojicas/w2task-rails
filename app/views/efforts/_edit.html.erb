<div id="workspace-header1">
	<div id="blue-icons">
		<%# New Effort %>
		<%= link_to_remote image_tag('/images/001_45.png', :size => "16x16"),
			{ :url => { :action => "new" } }, 
			{ :href => url_for(:action => :new) }
		%>
	</div>
	<%# workspace-header1 title %>
	<div id="efforttitle" style="font-size:12px;"><strong>Edit effort ID<%= @effort.id %></strong> - <%= truncate(@effort.body, 37) %> (by <%= @effort.user.login %>)</div>
</div>
<div style="margin:0; padding:0;">
<% form_remote_for(@effort , :html => { :id => 'edit_effort_form' }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 40, :rows => 4 %>
  </p>
  <p>
    <%= f.label :start %><br />
    <%= f.datetime_select :start %>
  </p>
  <p>
    <%= f.label :stop %><br />
    <%= f.datetime_select :stop %>
  </p>
  <p>
		<% if params[:page] %>
			<%= hidden_field_tag 'page', params[:page] %>
		<% end %>
    <%= f.submit "Update" %>
  </p>
<br />
<% end %>
</div>
