<div id="workspace-header1" style="background-color: #303030;">
	<div id="blue-icons">
		<%# New Business %>
		<%= link_to 'New message', new_message_path %>
	</div>
	<%# workspace-header1 title %>
	<strong>Listing messages</strong>
</div>

<table style="width:100%">
  <tr>
    <th>Recipient</th>
    <th>Sender</th>
    <th>Subject</th>
    <th>Message type</th>
  </tr>

<% for message in @messages %>
	<% if message.readed %>
  	<tr>
	<% else %>
		<tr style="font-weight: bold;">
	<% end %>
    <td><%=h message.find_user(message.recipient_id).login %></td>
    <td><%=h message.find_user(message.sender_id).login %></td>
    <td width="50%"><%=h message.subject %></td>
    <td><%=h message.message_type %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New message', new_message_path %>
