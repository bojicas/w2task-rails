<div id="workspace-header1" style="background-color: #303030;">
	<div id="blue-icons">
		<%# New Business %>
		<%= link_to image_tag('/images/001_01.png', :size => "16x16"), new_user_association_path %>
	</div>
	<%# workspace-header1 title %>
	<strong>Users with access to <%= session[:business_name] %> (<%= current_subdomain %>)</strong>
</div>

<div id="workspace-body">
	<ul>
		<% for user in @users %>
			<li>
				<div style="width:100%;">
					<div style="float:left;">
						<div id="avatar">
							<%= image_tag user.avatar.url(:thumb), :size => "24x24" %>
						</div>
						<div style="float:left; margin-left:10px;"> &nbsp; <br /> &nbsp; </div>
						<div style="align:left;min-width:350px; margin-left:10px; padding-left:10px;">
							<%=h user.login %> /
					    <%=h user.email %>
							<br />
							<% for user_association in user.user_associations %>
								<% if user_association.business_id == session[:business_id] %>
									<% if user_association.administrator == true %>
										Administrator
									<% else %>
										Normal User
									<% end %>
								<% end %>
							<% end %>
							<%=h "(This is you)" if user.id == session[:user_id] %>
						</div>
					</div>
				
				</div>
				<br /><br /><br />
				<div id="clear-both-top-dotted" style="background-color:#FFFFFF"></div>
		</li>
		<% end %>
	</ul>
</div>
<br />